@using ProjectProgra2020.Models,
@model List<producto>

<body>
      <div class="container">
        <div class="row">


          @foreach (var Producto in Model)
        {
            <form asp-controller="Cliente" asp-action="Catalogo">

            <div class="col-sm">
                <div class="card" style="width: 18rem;">
                  <img src="@Producto.imagen" class="card-img-top" width="150"px height="150"px>
                  <div class="card-body">
                    <h5 class="card-title">@Producto.nombre</h5>

                    <label>Descripcion: @Producto.descripcion</label><br>
                    
                    <input type="hidden" name="id_producto" value="@Producto.idproducto">
                    <div class="form-check">
                    


                    <label class="form-check-label" for="flexCheckIndeterminate">
                      Mostrar en catalogo
                    </label><br>
                    </div>
                    <button class="btn btn-dark">Guardar</button>
                  </div>
                </div>
              </div>
            </form>
        }
        </div>
        
    </div>
</body>